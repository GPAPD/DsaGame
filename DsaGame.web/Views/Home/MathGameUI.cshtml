@model MathGameModel
<div class="row row-col-md-12">

	<style>
		.timer {
			position: absolute;
			background: rgba( 255, 225, 53);
			color: white;
			padding: 8px 10px;
			border-radius: 50px;
			font-size: 20px;
			font-weight: bold;
			width: 50px;
			text-align: center;
			margin:10px;
		}

		#game-level {
			position: absolute;
			right:50%;
			font-size: 25px;
			font-weight: bold;
			text-align: center;
			padding-bottom:20px;
			justify-content: center;
			color: white;
		}

		.image-container {
			height: 100vh; /* Set a fixed height */
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
			align-items: center;
			overflow: hidden;
			background-size: 110% 110%;
			background-image: url('assets/game-ui-bg.jpg');
		}

		.image-container img {
			max-height: 100%; /* Ensure the image fits within the height */
			opacity: 0; /* Initially hide the image */
			transition: opacity 0.5s ease-in-out;
		}

		.options {
			display: flex;
			justify-content: center;
			gap: 15px;
			margin-top: 20px;
		}

		.drag-txt
		{
			color:white;
		}

		#my-model
		{
			align-content: center;
		}

		.draggable {
			width: 50px;
			height: 50px;
			background: orange;
			color:white;
			font-weight: 700;
			display: flex;
			align-items: center;
			justify-content: center;
			font-size: 24px;
			cursor: grab;
			border-radius: 10px;
		}

		.drop-zone {
			width: 100px;
			height: 80px;
			border: 5px dashed white;
			font-weight:800;
			color:white;
			display: inline-flex;
			align-items: center;
			justify-content: center;
			font-size: 24px;
			margin-top: 20px;
		}

		.submit-btn {
			margin-top: 20px;
			padding: 10px 20px;
			background: green;
			color: white;
			border: none;
			cursor: pointer;
			font-size: 18px;
		}

	</style>

	@if (Model.BananaResponse !=  null) 
	{		
		<div class="text-center">

			<div id="game-level" class="game-level">Level:@Model.Level </div>
			<div id="timer" class="timer"></div>

			<div class="image-container">

				<div class="row  pt-lg-5">
					<img src="@Model.BananaResponse.Question" alt="Question" onload="this.style.opacity=1;" />
					<input type="hidden" id="banana_key" value="@Model.Answer"/>
					<input type="hidden" id="level-user" value="@Model.Level" />
					@* <input type="hidden" id="banana_answer" value="@Model.BananaResponse.Solution"/> *@
				</div>

				<div class="row">
					<div class="">
						<!-- <input placeholder="Answer" id="user_answer" type="number" />-->
						<h2 class="drag-txt">Drag and Drop Your Answer</h2>
						<div class="options">
							<div class="draggable" draggable="true" id="num1">0</div>
							<div class="draggable" draggable="true" id="num2">1</div>
							<div class="draggable" draggable="true" id="num3">2</div>
							<div class="draggable" draggable="true" id="num3">3</div>
							<div class="draggable" draggable="true" id="num3">4</div>
							<div class="draggable" draggable="true" id="num3">5</div>
							<div class="draggable" draggable="true" id="num3">6</div>
							<div class="draggable" draggable="true" id="num3">7</div>
							<div class="draggable" draggable="true" id="num3">8</div>
							<div class="draggable" draggable="true" id="num3">9</div>
						</div>
						<br>
						<div class="drop-zone" id="answer-box">Drop here</div>
						<br>
					</div>
					<div class="mt-2">
						<input class="btn btn-success" value="Submit" type="button" onclick="checkAnswer()" />
					</div>
				</div>
			</div>
		</div>
	}

	<div class="modal" id="my-model" tabindex="-1">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Modal title</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body" id="model_body">
					
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-primary" id="btn_set_next_level">OK</button>
				</div>
			</div>
		</div>
	</div>

</div>


<script>
	$(document).ready(function() {

		$('.draggable').on('dragstart', function(e) {
			e.originalEvent.dataTransfer.setData('text', $(this).text());
		});

		$('.drop-zone').on('dragover', function(e) {
			e.preventDefault();
		});

		$('.drop-zone').on('drop', function(e) {
			e.preventDefault();
			var data = e.originalEvent.dataTransfer.getData('text');
			$(this).text(data);
		});

		$('#submit-btn').on('click', function() {
			var answer = $('#answer-box').text();
			if (answer === '7') { // Example correct answer
				alert('Correct Answer!');
			} else {
				alert('Wrong Answer! Try Again.');
			}
		});
	});
</script>