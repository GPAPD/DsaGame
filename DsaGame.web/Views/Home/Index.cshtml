@{
    ViewData["Title"] = "Game Start";
}

<style>

    .game-screen {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        /* background: linear-gradient(45deg, #0f0c29, #302b63, #24243e); */
		background-image: url('/assets/startgamebg.jpg');
        background-size: 110% 110%;
        /*  animation: backgroundAnimation 8s infinite alternate; */
        position: relative;
        text-align: center;
        color: #fff;
    }

    /* Background animation */
    @@keyframes backgroundAnimation {
        0% { background-position: 0% 50%; }
        100% { background-position: 100% 50%; }
    }

    /* Glowing title effect */
    .game-title {
        font-size: 3rem;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 4px;
        color: #3f2d11;
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.8), 0 0 20px rgba(255, 255, 255, 0.6);
        animation: glow 2s ease-in-out infinite alternate;
    }

    @@keyframes glow {
        0% { text-shadow: 0 0 10px rgba(255, 255, 255, 0.8), 0 0 20px rgba(255, 255, 255, 0.6); }
        100% { text-shadow: 0 0 20px rgba(255, 255, 255, 1), 0 0 30px rgba(255, 255, 255, 0.9); }
    }

    /* Animated floating text */
    .floating-text {
        font-size: 1.2rem;
        opacity: 0.8;
        animation: floatText 3s ease-in-out infinite alternate;
    }

    @@keyframes floatText {
        0% { transform: translateY(0px); }
        100% { transform: translateY(-10px); }
    }

    /* Glowing start button */
    .start-button {
        font-size: 1.5rem;
        font-weight: bold;
        padding: 15px 40px;
        border: none;
        border-radius: 50px;
        background: linear-gradient(45deg, #ff416c, #ff4b2b);
        color: white;
        cursor: pointer;
        box-shadow: 0 0 20px rgba(255, 75, 43, 0.8);
        transition: all 0.3s ease-in-out;
    }

    .start-button:hover {
        transform: scale(1.1);
        box-shadow: 0 0 30px rgba(255, 75, 43, 1);
    }

</style>
<div id="game-ui-container">
    <div class="game-screen">
        <div>
            <h1 class="game-title">Welcome to Math is Fun!</h1>
            @* <p class="floating-text">Are you ready for an exciting adventure?</p> *@

            <a>
                <button class="start-button" onclick="startGame()">Start Game</button>
            </a>

            
        </div>
    </div>

</div>


@section Scripts
{
    <partial name="_GameScriptsPartial" />
}
