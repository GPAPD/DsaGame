@using DsaGame.Web.Utility
@model GameOverScreenModel

<div class="game-over-container">
    <h1>@Model.PageTitle</h1>

    <table class="score-table">
        <tr>
            <th>Rank</th>
            <th>Player</th>
            <th>Level</th>
            <th>Score</th>
        </tr>

        @{
            var rank = 1;
            foreach (var s in Model.ScoreList) 
            {   <tr>
                    @if(s.IsLegit)
                    {
                        <td>@rank</td>
                        <td>@s.User.Name</td>
                        <td >@s.GameLevel</td>
                        <td >@s.Points</td>
                    }
                </tr>

                rank++;
            }
        }

        <!-- Add more rows dynamically if needed -->
    </table>

    <button class="retry-btn" onclick="window.location.reload();">
        @Model.GameOverPageButtonTitle
    </button>
    @if (Model.PageTitle == SD.GameOver) 
    {
        <div class="subtext">
            Better luck next time!
        </div>
    }

</div>

<style>
    .game-over-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        height: 100vh; /* Set a fixed height */
        overflow: hidden;
        background-size: 110% 110%;
		background-image: url('assets/gameoverbg.jpg');
        color:white;
    }

    h1 {
        font-size: 48px;
        margin-bottom: 20px;
        text-transform: uppercase;
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.8);
    }

    .score-table {
        margin-bottom: 20px;
        border-collapse: collapse;
        width: 80%;
        max-width: 400px;
        text-align: center;
        color:white;
    }

    .score-table th, .score-table td {
        border: 1px solid #fff;
        padding: 10px;
    }

    .score-table th {
        background-color: #ff5858;
        color: #fff;
    }

    .retry-btn {
        background: #ff5858;
        border: none;
        border-radius: 30px;
        padding: 15px 30px;
        font-size: 18px;
        font-weight: 600;
        color: #fff;
        cursor: pointer;
        text-transform: uppercase;
        transition: 0.3s ease;
        box-shadow: 0 0 15px rgba(255, 88, 88, 0.6);
    }

    .retry-btn:hover {
        background: #ff3b3b;
        box-shadow: 0 0 20px rgba(255, 59, 59, 0.8);
    }

    .subtext {
        margin-top: 20px;
        font-size: 14px;
        opacity: 0.8;
    }
</style>

